<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:minHeight="100dp"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/loan_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loan_card_lend_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="#222222"
                    android:textSize="12sp"
                    tools:text="Lend Date" />

                <TextView
                    android:id="@+id/loan_card_return_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="12sp"
                    tools:text="Return Date" />
            </LinearLayout>

            <TextView
                android:id="@+id/loan_card_renter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_person"
                android:textColor="#222222"
                android:textSize="15sp"
                tools:text="Renter" />

            <TextView
                android:id="@+id/loan_card_lessee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/ic_person"
                android:textColor="#222222"
                android:textSize="15sp"
                tools:text="Lessee" />

            <TextView
                android:id="@+id/loan_card_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_book_black_24dp"
                android:textColor="#222222"
                android:textSize="15sp"
                tools:text="Book" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <Button
                android:id="@+id/loan_card_return_btn"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorButtonPrimary"
                android:layout_height="wrap_content"
                android:text="@string/label_devolver" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
